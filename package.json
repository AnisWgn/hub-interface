{
    "name": "hub-interface",
    "version": "1.7.2",
    "packageManager": "traversal",
    "description": "Kiosk Hub Interface",
    "author": "Nexus Team",
    "main": "src/main/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron .",
        "build": "electron-builder"
    },
    "devDependencies": {
        "electron": "^40.1.0",
        "electron-builder": "^26.4.0"
    },
    "build": {
        "appId": "com.digiteq.hub",
        "productName": "Nexus Hub",
        "directories": {
            "output": "dist_build"
        },
        "files": [
            "src/**/*",
            "build/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "asar": false,
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico",
            "signAndEditExecutable": false
        },
        "nsis": {
            "oneClick": true,
            "allowToChangeInstallationDirectory": false
        },
        "publish": {
            "provider": "github",
            "releaseType": "release"
        }
    },
    "dependencies": {
        "electron-updater": "^6.7.3",
        "firebase": "^12.8.0"
    }
}